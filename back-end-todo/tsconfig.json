{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    // Environment Settings
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    // Source maps and declarations
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Stricter typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Module handling
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}